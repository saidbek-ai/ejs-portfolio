<%- include("./partials/header");%>

<div class="">
  <h2 class="title">Add Price</h2>
  <form action="/dashboard/pricing" method="post" class="product-form">
    <div class="product-links">
      <label for="title">
        <input
          type="text"
          class="product-input"
          autocomplete="off"
          placeholder="Title"
          id="title"
          name="title"
          required
        />
      </label>
      <label for="description">
        <textarea
          type="text"
          class="product-textarea"
          autocomplete="off"
          placeholder="Description"
          id="description"
          name="description"
          required
        ></textarea>
      </label>
      <label for="price">
        <input
          type="number"
          class="product-input"
          autocomplete="off"
          placeholder="Price"
          id="price"
          name="price"
          required
        />
      </label>
    </div>
    <button class="btn">Submit</button>
  </form>
  <h2 class="title">Pricing</h2>
  <div class="products">
    <%pricing.forEach(item => {%>
    <div class="product">
      <div class="pricing-card">
        <h2 class="pricing-title"><%=item.title%></h2>
        <p class="pricing-description"><%=item.description%></p>
        <p class="pricing-price"><%=item.price%>$</p>
        <a class="btn" href="/dashboard/pricing/delete/<%=item._id%>"
          ><i class="fa-solid fa-trash"></i
        ></a>
      </div>
    </div>
    <%})%>
  </div>
</div>

<%- include("./partials/footer");%>
